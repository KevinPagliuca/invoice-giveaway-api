// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(cuid())

  cpf       String   @unique
  name      String
  email     String   @unique
  birthDate DateTime
  rg        String?

  cellphone           String
  cellphone_secondary String?

  zipCode    String
  street     String
  district   String
  number     String
  complement String?
  city       String
  state      String

  password String
  invoices Invoice[]
  giveways Giveway[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invoice {
  id String @id @default(cuid())

  date        DateTime
  number      String
  cnpj        String
  totalValue  Float
  luckyNumber String?  @unique

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  giveway   Giveway? @relation(fields: [givewayId], references: [id])
  givewayId String?
}

model Giveway {
  id String @id @default(cuid())

  startDate DateTime
  endDate   DateTime?

  number String @unique

  winner   User?   @relation(fields: [winnerId], references: [id])
  winnerId String?

  invoices Invoice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
